{% extends "ProjetWebClassiqueBundle::layout.html.twig" %}

{% block title %}
    Instrument
{% endblock %}

{% block classiqueweb_body %}
    <h1 class="text-primary">Fiche d'un Instrument</h1>

    <div class="row">
        <div class="col-lg-2">
            <img src="{{ image }}" class="img-circle" width="100px" height="100px">
        </div>
        <div class="col-lg-5">
            <div class="row">
                <span class="text-info">Code :</span>{{ instrument.codeInstrument }}
            </div>
            <div class="row">
                <span class="text-info">Nom :</span>{{ instrument.nomInstrument }}
            </div>
        </div>
    </div>

    <h2 class="text-info">Interprété par  </h2>

    {{ render(controller("ProjetWebClassiqueBundle:Interprete:instrument", {'instrument': instrument.codeInstrument })) }}

    <h2 class="text-info">Albums de cet instrument </h2>

    {{ render(controller("ProjetWebClassiqueBundle:Album:instrument", {'instrument': instrument.codeInstrument })) }}

{% endblock %}



