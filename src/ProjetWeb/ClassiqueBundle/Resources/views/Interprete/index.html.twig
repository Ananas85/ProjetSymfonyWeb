{% extends "ProjetWebClassiqueBundle::layout.html.twig" %}

{% block title %}
    Liste Interprêtes
{% endblock %}

{% block classiqueweb_body %}

    <h2>Liste des Interprêtes</h2>

    <p>Sélection {{ contexte }} :
        {% if initial is defined %}
            {{ initial }}
        {% elseif contexte == "par année de naissance" %}
            entre {{ naissance }} et {{ fin }}
        {% endif %}

    </p>
    <ul>
    {% for musicien in liste %}
        <li>
            <a href="{{ path('projet_web_classique_interpretepage',{'id':musicien.codeMusicien}) }}">{{ musicien.nomMusicien }} {{ musicien.prénomMusicien }}</a>
        </li>
    {% else %}
        Pas d'interprete pour ces paramètres là.
    {% endfor %}
    </ul>
{% endblock %}